            <p>Ready to test your overall understanding of IT/OT convergence?</p>
            <button class="quiz-button" onclick="startFinalQuiz()">Take the Complete Assessment</button>
            <div id="final-quiz-result" style="margin-top: 15px; display: none;"></div>
        </div>
    </div>

    <script>
        let sectionsOpened = 0;
        const totalSections = 4; // objectives + 3 main sections

        function toggleSection(sectionId) {
            const content = document.getElementById(sectionId + '-content');
            const chevron = document.getElementById(sectionId + '-chevron');
            
            if (content.classList.contains('active')) {
                content.classList.remove('active');
                chevron.textContent = '‚ñº';
                sectionsOpened--;
            } else {
                content.classList.add('active');
                chevron.textContent = '‚ñ≤';
                sectionsOpened++;
            }
            
            updateProgress();
        }

        function updateProgress() {
            const progress = (sectionsOpened / totalSections) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function showQuizResult(result) {
            const resultDiv = document.getElementById('quiz-result');
            if (result === 'correct') {
                resultDiv.innerHTML = '<div style="color: white; font-weight: bold;">‚úÖ Correct! Industry 4.0 focuses on connecting machines and systems to create intelligent, automated processes.</div>';
                resultDiv.style.display = 'block';
            } else {
                resultDiv.innerHTML = '<div style="color: #ffcccc; font-weight: bold;">‚ùå Not quite right. Try again and think about the core concept of Industry 4.0.</div>';
                resultDiv.style.display = 'block';
            }
        }

        function startFinalQuiz() {
            const questions = [
                {
                    question: "Which principle is most important in OT systems?",
                    options: ["Data encryption", "Real-time performance and safety", "User interface design"],
                    correct: 1
                },
                {
                    question: "What does the CIA Triad represent in IT systems?",
                    options: ["Central Intelligence Agency standards", "Confidentiality, Integrity, Availability", "Computer, Internet, Application"],
                    correct: 1
                },
                {
                    question: "Which protocol is commonly used in OT systems?",
                    options: ["HTTP", "Modbus", "SMTP"],
                    correct: 1
                }
            ];

            let currentQuestion = 0;
            let score = 0;
            const resultDiv = document.getElementById('final-quiz-result');
            
            function showQuestion() {
                if (currentQuestion < questions.length) {
                    const q = questions[currentQuestion];
                    let html = `<div style="background: white; color: black; padding: 20px; border-radius: 10px; margin: 10px 0;">
                        <h4>${q.question}</h4>`;
                    
                    for (let i = 0; i < q.options.length; i++) {
                        html += `<button class="quiz-button" onclick="checkAnswer(${i}, ${q.correct})">${q.options[i]}</button>`;
                    }
                    html += '</div>';
                    resultDiv.innerHTML = html;
                    resultDiv.style.display = 'block';
                } else {
                    const percentage = Math.round((score / questions.length) * 100);
                    let message = '';
                    if (percentage >= 80) {
                        message = 'üéâ Excellent! You have a strong understanding of IT/OT convergence concepts.';
                    } else if (percentage >= 60) {
                        message = '‚úÖ Good job! Review the sections where you had questions for deeper understanding.';
                    } else {
                        message = 'üìö Keep studying! Go back through the sections and focus on the key concepts.';
                    }
                    
                    resultDiv.innerHTML = `<div style="background: white; color: black; padding: 20px; border-radius: 10px; margin: 10px 0;">
                        <h4>Quiz Complete!</h4>
                        <p>Your score: ${score}/${questions.length} (${percentage}%)</p>
                        <p>${message}</p>
                        <button class="quiz-button" onclick="startFinalQuiz()">Retake Quiz</button>
                    </div>`;
                }
            }

            window.checkAnswer = function(selected, correct) {
                if (selected === correct) {
                    score++;
                    resultDiv.innerHTML += '<div style="color: green; font-weight: bold; margin-top: 10px;">‚úÖ Correct!</div>';
                } else {
                    resultDiv.innerHTML += '<div style="color: red; font-weight: bold; margin-top: 10px;">‚ùå Incorrect</div>';
                }
                
                setTimeout(() => {
                    currentQuestion++;
                    showQuestion();
                }, 1500);
            };

            showQuestion();
        }

        // Auto-open objectives section on load
        window.onload = function() {
            toggleSection('objectives');
        };
    </script>
</body>
</html>
